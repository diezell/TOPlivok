<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <EditText
        android:id="@+id/totalCostField"
        android:layout_width="103dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/priceField"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/totalCostTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Руб."
        app:layout_constraintBottom_toTopOf="@+id/totalCostField"
        app:layout_constraintEnd_toEndOf="@+id/totalCostField"
        app:layout_constraintStart_toStartOf="@+id/totalCostField" />

    <EditText
        android:id="@+id/priceField"
        android:layout_width="103dp"
        android:layout_height="45dp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Цена за литр"
        app:layout_constraintBottom_toTopOf="@+id/priceField"
        app:layout_constraintEnd_toEndOf="@+id/priceField"
        app:layout_constraintStart_toStartOf="@+id/priceField" />

    <EditText
        android:id="@+id/odometerField"
        android:layout_width="103dp"
        android:layout_height="45dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/priceField"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/odometerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Одометр"
        app:layout_constraintBottom_toTopOf="@+id/odometerField"
        app:layout_constraintEnd_toEndOf="@+id/odometerField"
        app:layout_constraintStart_toStartOf="@+id/odometerField" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Добавить"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceField" />
</androidx.constraintlayout.widget.ConstraintLayout>